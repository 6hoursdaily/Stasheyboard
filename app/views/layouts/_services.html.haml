%table#services
  %thead
    %tr
      %th Service
      %th{:class => "today"} Current
      - (1..6).each do |x|
        %th= "#{(Date.today - x).strftime("%b. %d")}"
  %tbody
    - @services.each do |service|
      %tr
        %td= link_to service.name, service
        %td= service_status_at(service.id, "#{Date.today}")
        %td= service_status_at(service.id, "#{Date.today - 1}")
        %td= service_status_at(service.id, "#{Date.today - 2}")
        %td= service_status_at(service.id, "#{Date.today - 3}")
        %td= service_status_at(service.id, "#{Date.today - 4}")
        %td= service_status_at(service.id, "#{Date.today - 5}")
        %td= service_status_at(service.id, "#{Date.today - 6}")
%div.legend
  %h6 Status Legend
  %ul.hide-for-small
    %li!= "#{image_tag("tick-circle.png")} Service is up"
    %li!= "#{image_tag("cross-circle.png")} Service is currently down"
    %li!= "#{image_tag("traffic-cone.png")} Service is experiencing intermittent problems"
  %ul.show-for-small
    %li!= "#{image_tag("tick-circle.png")} Service is up"
    %li!= "#{image_tag("cross-circle.png")} Service is currently down"
    %li!= "#{image_tag("traffic-cone.png")} Service is experiencing intermittent problems"  
.row
  .four.columns.centered
    %div#links.show-for-small
      = link_to "Report an issue", href="mailto:help@stashboard.org", :class => "small round secondary button"
